<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e74c3c"
        tools:context=".ui.login.LoginFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="50dp"
            android:src="@drawable/raccoon_and_title"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_pattern"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <EditText
                android:id="@+id/choose_username"
                android:layout_width="250dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="22dp"
                android:hint="Choose a username"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/white"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ready_set"/>

            <Button
                android:id="@+id/talk_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/talk_button"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
